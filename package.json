{
  "name": "it-portfolio-manager-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "offline": "STAGE_NAME=dev sls offline --stage=dev start",
    "dynamodb:install": "sls dynamodb install",
    "dynamodb:start:dev": "nohup sls dynamodb start --stage=dev --seed >/dev/null &",
    "dynamodb:start:dev:interactive": "sls dynamodb start --stage=dev --seed",
    "dynamodb:start:test": "nohup sls dynamodb start --stage=test --seed >/dev/null &",
    "dynamodb:kill": "pgrep -f \"DynamoDBLocal.jar\" | xargs kill",
    "dynamodb:admin": "npx dynamodb-admin",
    "test:execute": "STAGE_NAME=test IS_OFFLINE=true tap test --node-arg=--require=ts-node/register --disable-coverage --allow-empty-coverage",
    "test": "npm run dynamodb:kill && sleep 10 && npm run dynamodb:start:test && sleep 10 && npm run test:execute && npm run dynamodb:kill",
    "test:ci": "npm run dynamodb:start:test && sleep 60 && npm run test:execute",
    "test:coverage:execute": "STAGE_NAME=test IS_OFFLINE=true tap test --node-arg=--require=ts-node/register",
    "test:coverage": "npm run dynamodb:start:test && npm run test:coverage:execute && npm run dynamodb:kill",
    "test:filter:execute": "STAGE_NAME=test IS_OFFLINE=true tap test --grep=\"$npm_config_filter\" --node-arg=--require=ts-node/register --disable-coverage",
    "test:filter": "npm run dynamodb:start:test && npm run test:filter:execute && npm run dynamodb:kill",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "precommit:init": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.5.4",
    "@types/sinon": "^17.0.3",
    "@types/tap": "^15.0.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "dynamodb-admin": "^4.5.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "serverless-dynamodb": "^0.2.43",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.421.0",
    "@aws-sdk/client-ssm": "^3.503.1",
    "@fastify/autoload": "^5.7.1",
    "@fastify/awilix": "^4.0.0",
    "@fastify/aws-lambda": "^3.3.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^8.4.0",
    "@fastify/env": "^4.2.0",
    "@fastify/jwt": "^7.2.1",
    "@fastify/session": "^10.9.0",
    "@fastify/swagger": "^8.10.0",
    "@fastify/swagger-ui": "^1.9.3",
    "@sinclair/typebox": "^0.31.2",
    "@slack/web-api": "^7.0.2",
    "awilix": "^9.0.0",
    "crypto": "^1.0.1",
    "fast-csv": "^5.0.1",
    "fastify": "^4.23.2",
    "fastify-plugin": "^4.5.1",
    "get-jwks": "^8.3.0",
    "google-auth-library": "^9.10.0",
    "module-alias": "^2.2.3",
    "openai": "^4.26.0",
    "serverless-tscpaths": "^0.0.8",
    "sinon": "^18.0.0",
    "tap": "^18.6.1"
  }
}
